---
const { title, url } = Astro.props;
---
  <!--
  Este componente se encarga de mostrar un enlace a una publicación del blog.
  -->

<style>
  li {
    padding: 4px;
  }
  a {
    color: aliceblue;
    text-decoration: none;
    position: relative;
    padding-bottom: 2px;
  }
  /* Efecto de subrayado */
  a::after {
    content: ""; /* Crea un elemento visual */
    position: absolute;
    left: 0;
    bottom: 0;
    width: 0; /* Se inicia sin ancho */
    height: 2px; /* Grosor de la línea */
    background-color: aliceblue; /* Color de la línea */
    transition: width 0.3s ease-in-out; /* Efecto de animación */
  }
  /* Al pasar el mouse, se expande el subrayado */
  a:hover::after {
    width: 100%; /* Se expande al pasar el mouse */
  }
</style>

<!-- Componente para mostrar un enlace a una publicación del blog -->

<li><a href={url}>{title}</a></li>
