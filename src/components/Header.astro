---
import Hamburger from "./Hamburger.astro";
import Navigation from "./Navigation.astro";
import Avatar from "./Avatar.astro";

const isHome = Astro.url.pathname === "/";
---

<style>
  nav {
    margin-bottom: 3rem;
    position: relative;
  }
</style>

<header>
  <nav>
    <Hamburger />
    <Navigation />
    {isHome && <Avatar />}
  </nav>
</header>
